<p id="notice"><%= notice %></p>
<div class="container">
	<div class="col-sm-6">
		<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary'%> 
		<%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
		<h1><%= @post.title%></h1>
		<p><%= image_tag @post.image.url, :size => "200x200"  if @post.image.present? %></p>
		<p><%= @post.description %></p>
		<h6><%= @post.date.to_date %></h6>

		<p>Leave your comment here</p>

		<%= form_for @comment, :url => comments_path, :method => "post"  do |f|%>
			<%= hidden_field_tag 'comment[post_id]', @post.id %>
			<p><%= f.text_field :comment, class: 'form-control', placeholder: 'Enter Comment'   %></p>
			<%= f.submit class: 'btn btn-primary'%>
		<% end %>
		<p><%= @post.comments.length %> Comments</p>
		<% @post.comments.each do |c|%>
			<p><%= c.comment %></p>
		<% end %>
	</div>
</div>


