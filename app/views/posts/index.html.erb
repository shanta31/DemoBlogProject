<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Posts</h1>
  <button class="btn btn-primary"><a href = '/posts/new'>New Post</a></button>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.date.to_date %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>